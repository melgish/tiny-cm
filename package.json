{
  "name": "@njfiorello/tiny-cm",
  "version": "1.0.0",
  "description": "very simple cm for testing",
  "main": "lib/app.js",
  "private": true,
  "scripts": {
    "test": "nyc mocha",
    "build": "tsc -p tsconfig.json",
    "format": "prettier src --write",
    "start": "npm run build && DATA_ROOT=./data node .",
    "docker": "docker build . -t tiny-cm-service:latest",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "licit"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "busboy": "^0.3.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.14",
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.0",
    "@types/mock-fs": "^4.13.0",
    "@types/node": "^14.14.24",
    "@types/rimraf": "^3.0.0",
    "@types/sinon": "^9.0.10",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "chai": "^4.2.0",
    "eslint": "^7.19.0",
    "mocha": "^8.2.1",
    "mock-fs": "^4.13.0",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "sinon": "^9.2.4",
    "source-map-support": "^0.5.19",
    "supertest": "^6.1.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": "spec",
    "spec": [
      "src/**/*.test.ts"
    ],
    "watch-files": [
      "src/**/*.ts"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "lcovonly",
      "text-summary",
      "html"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
